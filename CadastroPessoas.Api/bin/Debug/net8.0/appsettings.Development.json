          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "schemaName": "EventLogging"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "CadastrosPessoas.Api"
    }
  }
}
