    "Audience": "Frontend",
    "SecurityKey": "A494384E-8732-434C-AC6A-1D0E3396B981",
    "AccessTokenExpiration": 3600,
    "RefreshTokenExpiration": 10800
  },
  "ConnectionStrings": {
